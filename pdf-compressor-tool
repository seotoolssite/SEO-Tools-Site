        <div class="main-content">
            <div class="upload-section">
                <div class="drop-area" id="dropArea">
                    <i class="fas fa-file-pdf"></i>
                    <h3>Drop your PDF here or click to browse</h3>
                    <p>Supports PDF files up to 50MB</p>
                    <button class="btn" id="browseBtn">
                        <i class="fas fa-folder-open"></i> Select PDF File
                    </button>
                </div>
                <input type="file" id="fileInput" accept=".pdf" class="hidden">
                
                <div class="file-info" id="fileInfo"></div>
                
                <div class="settings-section">
                    <h2>Compression Settings</h2>
                    
                    <div class="setting-group">
                        <label for="compressionLevel">Compression Level</label>
                        <div class="slider-container">
                            <input type="range" id="compressionLevel" min="1" max="100" value="85">
                            <div class="slider-value" id="compressionValue">85%</div>
                        </div>
                    </div>
                    
                    <div class="setting-group">
                        <label>Output Quality</label>
                        <div class="select-wrapper">
                            <select id="qualitySelect">
