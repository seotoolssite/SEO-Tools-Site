    <div class="container">
        <div class="main-content">
            <div class="calculator-area">
                <div class="calculator-box" id="calculatorBox">
                    <div class="calculator-icon">
                        <i class="fas fa-weight-scale"></i>
                    </div>
                    <h3>Calculate Your Body Mass Index</h3>
                    <p>Enter your height and weight to check your BMI category</p>
                    
                    <div class="unit-toggle">
                        <button class="unit-btn active" id="metricBtn">Metric (cm/kg)</button>
                        <button class="unit-btn" id="imperialBtn">Imperial (ft/lbs)</button>
                    </div>
                    
                    <div class="input-group">
                        <div class="input-row" id="metricInputs">
                            <input type="number" class="input-field" id="heightCm" placeholder="Height (cm)" min="50" max="250">
                            <input type="number" class="input-field" id="weightKg" placeholder="Weight (kg)" min="20" max="300">
                        </div>
                        
                        <div class="input-row" id="imperialInputs" style="display: none;">
                            <input type="number" class="input-field" id="heightFt" placeholder="Feet" min="3" max="8">
                            <input type="number" class="input-field" id="heightIn" placeholder="Inches" min="0" max="11">
