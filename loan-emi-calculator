                <h1 class="header-title">Loan EMI Calculator</h1>
            </div>
            <p class="header-subtitle">Easily calculate your monthly loan payments, total interest, and repayment amount</p>
        </header>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Calculator Section -->
            <section class="calculator-section">
                <div class="calculator-card">
                    <h2 class="card-title">Loan Details</h2>
                    
                    <!-- Loan Amount Input -->
                    <div class="input-group">
                        <label class="input-label" for="loanAmount">Loan Amount (₹)</label>
                        <input type="number" id="loanAmount" class="input-field" placeholder="500000" min="1000" max="100000000" value="500000">
                        <div class="slider-container">
                            <input type="range" id="loanAmountSlider" class="slider" min="1000" max="10000000" value="500000" step="1000">
                            <div class="slider-value" id="loanAmountValue">₹5,00,000</div>
                        </div>
                    </div>
                    
                    <!-- Interest Rate Input -->
                    <div class="input-group">
                        <label class="input-label" for="interestRate">Interest Rate (% per annum)</label>
                        <input type="number" id="interestRate" class="input-field" placeholder="10" min="1" max="30" step="0.1" value="10">
                        <div class="slider-container">
                            <input type="range" id="interestRateSlider" class="slider" min="1" max="30" value="10" step="0.1">
                            <div class="slider-value" id="interestRateValue">10%</div>
                        </div>
                    </div>
                    
                    <!-- Loan Tenure Input -->
                    <div class="input-group">
                        <label class="input-label">Loan Tenure</label>
                        <div class="tenure-toggle">
                            <div class="toggle-option active" id="yearsToggle">Years</div>
                            <div class="toggle-option" id="monthsToggle">Months</div>
                        </div>
                        <input type="number" id="loanTenure" class="input-field" placeholder="5" min="1" max="40" value="5">
                        <div class="slider-container">
                            <input type="range" id="loanTenureSlider" class="slider" min="1" max="30" value="5">
                            <div class="slider-value" id="loanTenureValue">5 Years</div>
