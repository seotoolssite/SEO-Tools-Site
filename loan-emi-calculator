                    </div>
                    
                    <!-- EMI Display -->
                    <div class="emi-display">
                        <div class="emi-label">Monthly EMI</div>
                        <div class="emi-value" id="emiValue">₹10,624</div>
                    </div>
                    
                    <!-- Breakdown Grid -->
                    <div class="breakdown-grid">
                        <div class="breakdown-item">
                            <div class="breakdown-label">Total Interest Payable</div>
                            <div class="breakdown-value" id="totalInterest">₹1,37,438</div>
                        </div>
                        <div class="breakdown-item">
                            <div class="breakdown-label">Total Payment</div>
                            <div class="breakdown-value" id="totalPayment">₹6,37,438</div>
                        </div>
                    </div>
                    
                    <!-- Chart -->
                    <div class="chart-container">
                        <canvas id="emiChart"></canvas>
                    </div>
                </div>
                
                <!-- Summary Card -->
                <div class="summary-card">
                    <h2 class="card-title">Loan Summary</h2>
                    <div class="summary-item">
                        <span class="summary-label">Loan Amount</span>
