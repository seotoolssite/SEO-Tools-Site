<body>
    <div class="container">
        <header>
            <div class="logo">PDF ↔ Word Converter</div>
            <p class="tagline">Convert PDF to Word and Word to PDF instantly with professional quality</p>
        </header>
        
        <div class="converter-card">
            <div class="tabs">
                <div class="tab active" id="pdfToWordTab">PDF to Word</div>
                <div class="tab" id="wordToPdfTab">Word to PDF</div>
            </div>
            
            <div class="upload-area" id="uploadArea">
                <div class="upload-icon">
                    <i class="fas fa-file-upload"></i>
                </div>
                <p class="upload-text">Drop your file here or click to browse</p>
                <input type="file" id="fileInput" class="hidden" accept=".pdf,.docx">
                <button class="btn" id="selectFileBtn">
                    <i class="fas fa-folder-open"></i>
                    <span>Choose File</span>
                </button>
                <p class="supported-formats" id="supportedFormats">Supports PDF and DOCX files</p>
            </div>
            
            <div class="file-info hidden" id="fileInfo">
                <div class="file-name" id="fileName">-</div>
                <div class="file-size" id="fileSize">-</div>
            </div>
            
            <div class="progress-container" id="progressContainer">
                <div class="progress-bar">
                    <div class="progress" id="progressBar"></div>
                </div>
                <div class="progress-text" id="progressText">Converting...</div>
            </div>
            
            <div class="action-buttons">
                <button class="btn" id="convertBtn" disabled>
                    <i class="fas fa-sync-alt"></i>
                    <span>Convert Now</span>
                </button>
                <button class="btn btn-secondary" id="downloadBtn" disabled>
                    <i class="fas fa-download"></i>
                    <span>Download Converted File</span>
                </button>
            </div>
            
            <div class="result-area" id="resultArea">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="result-text" id="resultText">Your file has been converted successfully!</div>
            </div>
        </div>
        
        <footer>
            <p>Free & Secure Online Converter — seotools.site</p>
        </footer>
    </div>

    <script>
        // DOM Elements
        const pdfToWordTab = document.getElementById('pdfToWordTab');
        const wordToPdfTab = document.getElementById('wordToPdfTab');
        const fileInput = document.getElementById('fileInput');
        const selectFileBtn = document.getElementById('selectFileBtn');
        const uploadArea = document.getElementById('uploadArea');
        const supportedFormats = document.getElementById('supportedFormats');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const progressContainer = document.getElementById('progressContainer');
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const convertBtn = document.getElementById('convertBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        const resultArea = document.getElementById('resultArea');
        const resultText = document.getElementById('resultText');

        // Global variables
        let currentMode = 'pdfToWord'; // 'pdfToWord' or 'wordToPdf'
        let selectedFile = null;
        let convertedFile = null;

        // Event Listeners
        selectFileBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileUpload);
        uploadArea.addEventListener('dragover', handleDragOver);
        uploadArea.addEventListener('dragleave', handleDragLeave);
        uploadArea.addEventListener('drop', handleDrop);
        convertBtn.addEventListener('click', convertFile);
        downloadBtn.addEventListener('click', downloadFile);
        
        pdfToWordTab.addEventListener('click', () => switchMode('pdfToWord'));
        wordToPdfTab.addEventListener('click', () => switchMode('wordToPdf'));

        // Functions
        function switchMode(mode) {
            currentMode = mode;
            
            // Update tabs
            pdfToWordTab.classList.toggle('active', mode === 'pdfToWord');
            wordToPdfTab.classList.toggle('active', mode === 'wordToPdf');
            
            // Update supported formats text
            if (mode === 'pdfToWord') {
                supportedFormats.textContent = 'Supports PDF files';
                fileInput.accept = '.pdf';
            } else {
                supportedFormats.textContent = 'Supports DOCX files';
                fileInput.accept = '.docx';
            }
            
            // Reset UI
            resetUI();
        }

        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (file) {
                processFile(file);
            }
        }

        function handleDragOver(event) {
            event.preventDefault();
            uploadArea.classList.add('active');
        }

        function handleDragLeave(event) {
            event.preventDefault();
            uploadArea.classList.remove('active');
        }

        function handleDrop(event) {
            event.preventDefault();
            uploadArea.classList.remove('active');
            
            const file = event.dataTransfer.files[0];
            if (file) {
                processFile(file);
            }
        }

        function processFile(file) {
            // Check file type based on current mode
            if (currentMode === 'pdfToWord' && !file.name.toLowerCase().endsWith('.pdf')) {
                alert('Please select a PDF file for PDF to Word conversion.');
                return;
            }
            
            if (currentMode === 'wordToPdf' && !file.name.toLowerCase().endsWith('.docx')) {
                alert('Please select a DOCX file for Word to PDF conversion.');
                return;
            }
            
            selectedFile = file;
            
            // Update file info
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.classList.remove('hidden');
            
            // Enable convert button
            convertBtn.disabled = false;
            
            // Hide result area if shown
            resultArea.style.display = 'none';
            downloadBtn.disabled = true;
        }

        function convertFile() {
            if (!selectedFile) return;
            
            // Show progress
            progressContainer.style.display = 'block';
            progressBar.style.width = '0%';
            progressText.textContent = 'Converting...';
            convertBtn.disabled = true;
            
            // Simulate conversion process (in a real app, this would be the actual conversion)
            let progress = 0;
            const interval = setInterval(() => {
                progress += 5;
                progressBar.style.width = `${progress}%`;
                
                if (progress >= 100) {
                    clearInterval(interval);
                    progressText.textContent = 'Conversion complete!';
                    
                    // Simulate converted file
                    convertedFile = {
                        name: selectedFile.name.replace(/\.[^/.]+$/, "") + 
                              (currentMode === 'pdfToWord' ? '.docx' : '.pdf'),
                        content: 'converted-file-content' // In a real app, this would be the actual file
                    };
                    
                    // Show result and enable download
                    resultArea.style.display = 'block';
                    resultText.textContent = `Your ${currentMode === 'pdfToWord' ? 'PDF' : 'Word'} file has been converted to ${currentMode === 'pdfToWord' ? 'Word' : 'PDF'} successfully!`;
                    downloadBtn.disabled = false;
                    convertBtn.disabled = false;
                }
            }, 100);
        }

        function downloadFile() {
            if (!convertedFile) return;
            
            // In a real implementation, this would download the actual converted file
            // For this demo, we'll create a simple text file to simulate the download
            const blob = new Blob(["This is a simulated converted file. In a real implementation, this would be the actual converted document."], 
                                {type: currentMode === 'pdfToWord' ? 'application/vnd.openxmlformats-officedocument.wordprocessingml.document' : 'application/pdf'});
            
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = convertedFile.name;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        function resetUI() {
            fileInput.value = '';
            selectedFile = null;
            convertedFile = null;
            fileInfo.classList.add('hidden');
            progressContainer.style.display = 'none';
            resultArea.style.display = 'none';
            convertBtn.disabled = true;
            downloadBtn.disabled = true;
        }

        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' bytes';
            else if (bytes < 1048576) return (bytes / 1024).toFixed(2) + ' KB';
            else return (bytes / 1048576).toFixed(2) + ' MB';
        }
    </script>
</body>
</html>
