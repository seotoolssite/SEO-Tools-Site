    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const amountInput = document.getElementById('amount');
            const amountError = document.getElementById('amount-error');
            const gstTypeRadios = document.querySelectorAll('input[name="gst-type"]');
            const gstRateOptions = document.querySelectorAll('.gst-rate-option');
            const calculateBtn = document.getElementById('calculate-btn');
            const resetBtn = document.getElementById('reset-btn');
            const resultSection = document.getElementById('result-section');
            const baseAmountEl = document.getElementById('base-amount');
            const gstAmountEl = document.getElementById('gst-amount');
            const totalAmountEl = document.getElementById('total-amount');
            const gstRateEl = document.getElementById('gst-rate');
            
            // Variables
            let selectedGstRate = 18; // Default rate
            
            // Event Listeners
            gstRateOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove selected class from all options
                    gstRateOptions.forEach(opt => opt.classList.remove('selected'));
                    // Add selected class to clicked option
                    this.classList.add('selected');
                    // Update selected GST rate
                    selectedGstRate = parseInt(this.getAttribute('data-rate'));
                });
            });
            
            calculateBtn.addEventListener('click', calculateGST);
            resetBtn.addEventListener('click', resetCalculator);
            
            // Functions
            function calculateGST() {
                // Reset error message
                amountError.style.display = 'none';
                
                // Get input values
                const amount = parseFloat(amountInput.value);
                const gstType = document.querySelector('input[name="gst-type"]:checked').value;
                
                // Validate input
                if (isNaN(amount) || amount <= 0) {
                    amountError.style.display = 'block';
                    resultSection.classList.remove('active');
                    return;
                }
                
                // Calculate GST
                let baseAmount, gstAmount, totalAmount;
                
                if (gstType === 'add') {
                    // Add GST to amount
                    baseAmount = amount;
                    gstAmount = (amount * selectedGstRate) / 100;
                    totalAmount = baseAmount + gstAmount;
                } else {
                    // Remove GST from amount
                    totalAmount = amount;
                    baseAmount = amount / (1 + (selectedGstRate / 100));
                    gstAmount = totalAmount - baseAmount;
                }
                
                // Format numbers with commas
                const formatCurrency = (num) => {
                    return '₹' + num.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
                };
                
                // Update result display
                baseAmountEl.textContent = formatCurrency(baseAmount);
                gstAmountEl.textContent = formatCurrency(gstAmount);
                totalAmountEl.textContent = formatCurrency(totalAmount);
                gstRateEl.textContent = selectedGstRate + '%';
                
                // Show result section with animation
                resultSection.classList.add('active');
            }
            
            function resetCalculator() {
                // Clear inputs
                document.getElementById('product-name').value = '';
                amountInput.value = '';
                
                // Reset GST rate to default
                gstRateOptions.forEach(opt => opt.classList.remove('selected'));
                document.querySelector('.gst-rate-option[data-rate="18"]').classList.add('selected');
                selectedGstRate = 18;
                
                // Reset GST type to default
                document.getElementById('add-gst').checked = true;
                
                // Hide error message and result section
                amountError.style.display = 'none';
                resultSection.classList.remove('active');
            }
            
            // Initialize calculator
            resetCalculator();
        });
    </script>
</body>
