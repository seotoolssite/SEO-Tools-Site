    <div class="container">
        <div class="main-content">
            <div class="calculator-area">
                <div class="calculator-box" id="calculatorBox">
                    <div class="calculator-icon">
                        <i class="fas fa-birthday-cake"></i>
                    </div>
                    <h3>Enter your date of birth</h3>
